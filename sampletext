variables:
  # default empty, will be set in before_script
  TF_VAR_grafana_auth: ""

before_script:
  - |
    echo "[INFO] Checking LZ account: $IN_LZ_ACCOUNT_NAME"
    if [[ "$IN_LZ_ACCOUNT_NAME" == "PROD" ]]; then
      export TF_VAR_grafana_auth="$GRAFANA_API_TOKEN_PROD"
      echo "[INFO] Using PROD Grafana token"
    else
      export TF_VAR_grafana_auth="$GRAFANA_API_TOKEN_NONPROD"
      echo "[INFO] Using NONPROD Grafana token"
    fi