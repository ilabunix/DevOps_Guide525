<body>
  <div class="chat-container">
    <h1>Ask Clara ‚Äì Your CloudOps Assistant</h1>
    <div class="question-label">Enter your question below:</div>
    <textarea id="query" placeholder="e.g., How to analyze VPC flow logs?"></textarea>
    <button onclick="askBot()">Ask</button>
    <div id="responseBox" class="bubble">Clara is ready to help you! üí¨</div>
  </div>

  <script>
    const queryInput = document.getElementById("query");
    const responseBox = document.getElementById("responseBox");

    async function askBot() {
      const query = queryInput.value.trim();
      if (!query) {
        responseBox.innerHTML = "‚ùó Please enter a question.";
        return;
      }

      responseBox.innerHTML = "üß† Clara is thinking...";

      try {
        const res = await fetch("https://3vdty0ekf8.execute-api.us-west-2.amazonaws.com/prod/chatbot", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ query })
        });

        const data = await res.json();
        const answer = Array.isArray(data.answer)
          ? data.answer.map(item => item.text || item.content || "").join("\n\n")
          : data.answer || "No answer generated.";

        responseBox.innerHTML = `
          <div style="background:#eef6fc;padding:1rem;border-radius:6px;white-space:pre-wrap;">
            <strong>üí° Clara says:</strong><br><br>${answer}
          </div>`;
      } catch (error) {
        responseBox.innerHTML = `‚ùå Request failed: ${error.message}`;
      }
    }

    // Enable Enter key to trigger askBot
    queryInput.addEventListener("keypress", function (e) {
      if (e.key === "Enter" && !e.shiftKey) {
        e.preventDefault();
        askBot();
      }
    });
  </script>
</body>
</html>