    }
    [data-theme="dark"] {
      --bg-color: #1e1e1e;
      --text-color: #eaeaea;
      --card-bg: #2a2a2a;
      --bot-bubble: #33383b;
      --user-bubble: #3a4854;
    }
    body {
      font-family: var(--font);
      background-color: var(--bg-color);
      color: var(--text-color);
      margin: 0;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: background-color 0.3s ease;
    }
    .chat-wrapper {
      width: 100%;
      max-width: 750px;
      background: var(--card-bg);
      padding: 1.5rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.08);
    }
    h1 {
      margin-top: 0;
      display: flex;
      align-items: center;
      font-size: 1.5rem;
      gap: 0.5rem;
    }
    .tagline {
      font-size: 0.9rem;
      color: gray;
      margin-bottom: 1rem;
      text-align: center;
    }
    textarea {
      width: 100%;
      padding: 0.75rem;
