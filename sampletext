<body>
  <div class="container">
    <h2>Ask Clara - Your CloudOps Assistant</h2>
    <textarea id="query" placeholder="Enter your question..."></textarea>
    <button onclick="askBot()">Ask</button>
    <div id="responseBox"></div>
  </div>

  <script>
    async function askBot() {
      const queryInput = document.getElementById("query");
      const query = queryInput.value.trim();
      const responseBox = document.getElementById("responseBox");

      if (!query) {
        responseBox.innerHTML = "<div class='response-bubble'>Please enter a question.</div>";
        return;
      }

      responseBox.innerHTML = "<div class='response-bubble'>Clara is thinking...</div>";

      try {
        const res = await fetch("https://3vdty0ekf8.execute-api.us-west-2.amazonaws.com/prod/chatbot", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ query })
        });

        const data = await res.json();

        if (data.answer && Array.isArray(data.answer)) {
          const messages = data.answer.map(item =>
            item.text || item.content || JSON.stringify(item)
          ).join("<br><br>");

          responseBox.innerHTML = `
            <div class="query-label">How to analyze vpc flow logs?</div>
            <div class="response-bubble">${messages}</div>
          `;
        } else if (typeof data.answer === "string") {
          responseBox.innerHTML = `
            <div class="query-label">${query}</div>
            <div class="response-bubble">${data.answer}</div>
          `;
        } else {
          responseBox.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
        }
      } catch (error) {
        responseBox.innerHTML = `<div class='response-bubble'>Request failed: ${error.message}</div>`;
      }
    }
  </script>
</body>
</html>