<body>
  <div class="container">
    <h1>ü§ñ Ask Clara ‚Äì Your CloudOps Assistant</h1>
    <div class="tagline">From chaos to clarity ‚Äî with Clara.</div>

    <div class="chat-box" id="chatBox">
      <div class="message clara-msg">üí¨ Clara is ready to help you!</div>
    </div>

    <div class="query-area">
      <textarea id="query" placeholder="Enter your question here..."></textarea>
      <div class="actions">
        <button onclick="askBot()">Ask</button>
        <label class="dark-toggle">
          <input type="checkbox" id="darkModeToggle"> Dark Mode
        </label>
      </div>
    </div>
  </div>

  <script>
    const queryInput = document.getElementById("query");
    const chatBox = document.getElementById("chatBox");
    const toggle = document.getElementById("darkModeToggle");

    toggle.addEventListener("change", () => {
      document.body.classList.toggle("dark", toggle.checked);
    });

    async function askBot() {
      const query = queryInput.value.trim();
      if (!query) return;

      // Add user question
      const userMsg = document.createElement("div");
      userMsg.className = "message user-msg";
      userMsg.textContent = query;
      chatBox.appendChild(userMsg);

      // Show thinking...
      const thinkingMsg = document.createElement("div");
      thinkingMsg.className = "message clara-msg";
      thinkingMsg.textContent = "üß† Clara is thinking...";
      chatBox.appendChild(thinkingMsg);
      chatBox.scrollTop = chatBox.scrollHeight;

      try {
        const res = await fetch("https://3vdty0ekf8.execute-api.us-west-2.amazonaws.com/prod/chatbot", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ query })
        });

        const data = await res.json();
        const answer = Array.isArray(data.answer)
          ? data.answer.map(item => item.text || item.content || "").join("\n\n")
          : data.answer || "ü§ñ No answer generated.";

        // Replace thinking with real response
        thinkingMsg.textContent = `üí° Clara says:\n\n${answer}`;
        chatBox.scrollTop = chatBox.scrollHeight;

      } catch (error) {
        thinkingMsg.textContent = `‚ùå Error: ${error.message}`;
      }

      queryInput.value = "";
    }

    queryInput.addEventListener("keypress", function (e) {
      if (e.key === "Enter" && !e.shiftKey) {
        e.preventDefault();
        askBot();
      }
    });
  </script>
