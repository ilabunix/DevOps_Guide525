      align-items: center;
    }

    h2 {
      color: #222;
    }

    .container {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
      max-width: 700px;
      width: 100%;
    }

    textarea {
      width: 100%;
      height: 100px;
      font-size: 1rem;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      margin-bottom: 1rem;
      resize: vertical;
    }

    button {
      padding: 0.75rem 2rem;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background-color: #0056b3;
    }

    #responseBox {
      margin-top: 1.5rem;
      white-space: pre-wrap;
    }

    .response-bubble {
      background: #f1f7ff;
      border-left: 4px solid #007bff;
